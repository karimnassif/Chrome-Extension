{
	"manifest_version": 2,
	"name": "First Extension",
	"description": "testing",
	"version": "0.1",
	"permissions": [
	"<all_urls>",
	"background",
	"activeTab",
	"webRequest",
	"webRequestBlocking"
	],

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"web_accessible_resources": [
    "style.css"
  ],

	"permissions": [
		"activeTab"
	]
}
